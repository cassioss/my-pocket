<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.illinois.dscs.mypocket" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".controller.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.AddTransactionActivity"
            android:label="@string/title_activity_add_transaction"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".controller.AddAccountActivity"
            android:label="@string/title_activity_add_account" >
        </activity>
        <activity
            android:name=".controller.ShowAccountActivity"
            android:label="@string/title_activity_show_account" >
        </activity>
    </application>

</manifest>
